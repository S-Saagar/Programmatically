<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorGrayLight</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorGrayLight</item>
        <item name="android:state_hovered">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
